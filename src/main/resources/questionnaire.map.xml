<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sannong.infrastructure.persistance.repository.QuestionnaireRepository">
	<cache eviction="FIFO" flushInterval="60000" size="512" readOnly="true" />

	<select id="getAnswerByCellphone" parameterType="String" resultType="String">
     	<![CDATA[
     		select a.questionnaire_answer from applications a,users u where a.applicant_id = u.user_id and u.cellphone = #{cellphone}
     	]]>
	</select>
</mapper>

